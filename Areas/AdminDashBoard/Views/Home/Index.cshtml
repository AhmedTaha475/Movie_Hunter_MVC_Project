@using Movie_Hunter_FinalProject.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<SystemUser> signInManager
@inject UserManager<SystemUser> userManager
@{
    ViewData["Title"] = "Index";

}

<div class="card-box pd-20 height-100-p mb-30">
    <div class="row align-items-center">
        <div class="col-md-4">
            <img src="~/vendors/images/banner-img.png" alt="">
        </div>
        <div class="col-md-8">
            <h4 class="font-20 weight-500 mb-10 text-capitalize">
                Welcome back
                @if (signInManager.IsSignedIn(User))
                {
                    var user = await userManager.GetUserAsync(User);
                    <div class="weight-600 font-30 text-blue">@user.First_Name @user.Last_Name</div>
                }

            </h4>
            <p class="font-18 max-width-600"> Here You can Edit all of your system components  </p>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-xl-12 mb-30">
        <div class="card-box height-100-p pd-20">
            <h2 class="h4 mb-20">Activity</h2>
            <div id="chart5"></div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-12 col-lg-4 mb-30" >
            <div class="card bg-dark card-box" style="box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);">
                <img class="card-img" src="~/vendors/images/Loading.gif" alt="Card image">
                <div class="card-img-overlay">
                    <h2 class="card-title weight-500 fs-3">Users : <span class="text-danger ">@ViewBag.Users</span></h2>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-30">
            <div class="card bg-dark card-box" style="box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);">
                <img class="card-img" src="~/vendors/images/Construction worker.gif" alt="Card image">
                <div class="card-img-overlay">
                    <h2 class="card-title weight-500 fs-3">Roles : <span class="text-danger ">@ViewBag.Roles</span></h2>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-30">
            <div class="card bg-dark card-box" style="box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);">
                <img class="card-img" src="~/vendors/images/Film rolls.gif" alt="Card image">
                <div class="card-img-overlay">
                    <h2 class="card-title weight-500 fs-3">Movies : <span class="text-danger ">@ViewBag.Movies</span></h2>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-30">
            <div class="card bg-dark card-box" style="box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);">
                <img class="card-img" src="~/vendors/images/Popcorns.gif" alt="Card image">
                <div class="card-img-overlay">
                    <h2 class="card-title weight-500 fs-3">Series : <span class="text-danger ">@ViewBag.Series</span></h2>
                </div>
            </div>

        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 mb-30">
            <div class="card bg-dark card-box" style="box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);">
                <img class="card-img" src="~/vendors/images/Videotape.gif" alt="Card image">
                <div class="card-img-overlay">
                    <h2 class="card-title weight-500 fs-3">Episodes : <span class="text-danger ">@ViewBag.Episodes</span></h2>
                </div>
            </div>
        </div>

    </div>
</div>

