@model Movie_Hunter_FinalProject.Models.CreateRoleVM;
@{
    ViewData["Title"] = "CreateRole";
}

<h1>Create New Role</h1>

<br />
<br />

<form asp-controller="Role" asp-action="CreateRole">

    <div asp-validation-summary="All" class="text-danger"></div>
    <br />
    <div class="form-group">
        <label> Enter Role Name</label>
        <input asp-for="RoleName" class="form-control"   />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>





    <center>
        <button type="submit" class="btn btn-primary"> Add</button>
        <button type="reset" class="btn btn-danger"> Reset</button>
        <a class="btn btn-info" asp-controller="Role" asp-action="Index" > Back</a>
    </center>

    <br /><br />

</form>

