@using Microsoft.AspNetCore.Identity
@using Movie_Hunter_FinalProject.Areas.Identity.Data

@inject SignInManager<SystemUser> SignInManager
@inject UserManager<SystemUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        
     var userx = await UserManager.GetUserAsync(User);
        
        <li class="nav-item">
            @*@UserManager.GetUserName(User)!*@
        <a id="manage" class="nav-link text-white mt-0 mb-0 pt-0 pb-0" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @userx.First_Name! </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white mt-0 mb-0 pt-0 pb-0" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white mt-0 mb-0 pt-0 pb-0" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
